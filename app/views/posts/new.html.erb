<% provide(:title, "New Post") %>

  <div class="card">
    <div class="card-body">
        <%= form_for([@project, @post]) do |f| %>
            <div class="form-group">
                <%= f.label :title %><br>
                <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
            </div>
            <div class="form-group">
                <%= f.label :syntax %><br>
                <%= f.select :syntax, [["html", "html"], 
                ["python", "python hljs"],
                ["bash", "hljs-meta"], 
                ["cpp", "cpp hljs"], 
                ["scala", "scala hljs"], 
                ["java", "java hljs"], 
                ["json", "json hljs"],
                ["ruby", "ruby hljs"],
                ], {}, {class: "form-control form-control-sm"} %>
            </div>
            <div class="form-group">
                <%= f.label :code %><br>
                <%= f.text_area :body, class: 'form-control form-control-sm', rows: 16, placeholder: "Enter Code" %>
            </div>
            <p>
                <button type="submit" class="btn btn-primary btn-block">Paste Code</button>
            </p>
            <% end %>
        </div>
    </div>
    <br/>
    <%= link_to 'Back', project_path(@project) %>