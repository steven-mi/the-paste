<% provide(:title, "Edit Post") %>

<div class="card">
  <div class="card-body">
    <%= form_for([@project, @post]) do |f| %>
        <div class="form-group">
            <%= f.label :title %><br>
            <%= f.text_field :title, class: 'form-control', placeholder: @post.title %>
        </div>
        <div class="form-group">
            <%= f.label :syntax %><br>
            <%= f.select :syntax, @available_languages , {}, {class: "form-control form-control-sm"} %>
        </div>
        <div class="form-group">
            <%= f.label :code %><br>
            <%= f.text_area :body, class: 'form-control form-control-sm', rows: 15, placeholder: @post.body %>
        </div>
        <p>
            <button type="submit" class="btn btn-primary btn-block">Edit Code</button>
        </p>
        <% end %>
    </div>
</div>
<br/>
<%= link_to 'Back',  controller: "projects", action: "show", id: @project, password: @project.password %>


